## スクロール行数
defscrollback 10000

## マウススクロール有効
termcapinfo xterm* ti@:te@

defutf8 on
defencoding utf8
encoding utf8 utf8

escape ^Tt

altscreen on

defbce on
term xterm-256color

shelltitle '$ |shell'

# message display time
msgwait 3
msgminwait 2

# display status
hardstatus alwayslastline "%?%h%:#%n %t @%H)%? %{= dd}%-035= %{= wB}%l %Y-%m-%d %02c:%s"
caption always "%{=r dd}%-Lw%40L>%?%F%{+b kG}%:[%{=r dd}%? %n%f %t %?%F%{-}%:]%?%+Lw"

# split line color
sorendition "+rb .R"
